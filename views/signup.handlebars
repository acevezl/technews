<!-- Sign up page -->
<div class="signup">
    <div class="row">
        <div class="seven columns auth-box">
            <h5 class="post-title">Sign up</h5>
            <div class="validation-messages error">
            </div>
            <form class="signup-form">
                <div class="names-box">
                    <div>
                        <label for="first-name">First Name</label>
                        <input type="text" id="first-name" />
                    </div>
                    <div>
                        <label for="last-name">Last Name</label>
                        <input type="text" id="last-name" />
                    </div>
                    <div>
                        <label for="email-signup">Email</label>
                        <input type="text" id="email-signup" />
                    </div>
                </div>
                <div class="username-box">
                    <div>
                        <label for="username-signup">Username <span id="user-validation"></span></label>
                        <input type="text" id="username-signup" />
                    </div>
                    <div>
                        <label for="password-signup">Password <span id="password-validation"></span></label>
                        <input type="password" id="password-signup" />
                    </div>
                    <div>
                        <label for="password-signup-2">Re-enter your password </label>
                        <input type="password" id="password-signup-2" />
                    </div>
                </div>
                <div>
                    <button class="button-primary" type="submit">signup</button>
                </div>
            </form>
            <hr>
            <form class="login-form">
                <h5 class="post-title">Already registered?</h5>
                <button>login</button>
            </form>
        </div>
        <div class="five columns newsimage">
        </div>
    </div>
</div>

<script src="./assets/js/signup.js"></script>